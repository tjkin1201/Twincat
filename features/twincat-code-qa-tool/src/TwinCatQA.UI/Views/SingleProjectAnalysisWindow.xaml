<Window x:Class="TwinCatQA.UI.Views.SingleProjectAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TwinCatQA.UI.Converters"
        mc:Ignorable="d"
        Title="TwinCAT 단일 프로젝트 QA 분석"
        Height="900" Width="1300"
        MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5a6fd6"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeight" Value="32"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="TwinCAT 단일 프로젝트 QA 분석"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock Text="프로젝트 전체 코드에 대한 품질 분석을 수행합니다"
                          FontSize="13"
                          Foreground="#ECF0F1"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Folder Selection -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                          Text="프로젝트 폴더:"
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Foreground="#2C3E50"
                          Width="100"/>
                <TextBox Grid.Column="1"
                        Text="{Binding ProjectFolderPath, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="True"
                        Padding="10"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Background="#F8F9FA"
                        BorderBrush="#DEE2E6"/>
                <Button Grid.Column="2"
                       Content="폴더 선택..."
                       Command="{Binding BrowseFolderCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Margin="0,0,10,0"/>
                <Button Grid.Column="3"
                       Content="분석 시작"
                       Command="{Binding AnalyzeCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Width="120"/>
            </Grid>
        </Border>

        <!-- Summary Statistics -->
        <Border Grid.Row="2"
                Visibility="{Binding HasResults, Converter={StaticResource BoolToVisConverter}}"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="총 파일" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalFiles}" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="코드 라인" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalLines, StringFormat=N0}" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="총 이슈" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalIssues}" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" BorderBrush="#E74C3C" BorderThickness="0,3,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Critical" FontSize="12" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CriticalCount}" FontSize="28" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource StatCardStyle}" BorderBrush="#F39C12" BorderThickness="0,3,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Warning" FontSize="12" Foreground="#F39C12" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding WarningCount}" FontSize="28" FontWeight="Bold" Foreground="#F39C12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="5" Style="{StaticResource StatCardStyle}" BorderBrush="#3498DB" BorderThickness="0,3,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Info" FontSize="12" Foreground="#3498DB" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding InfoCount}" FontSize="28" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Results Tabs -->
        <TabControl Grid.Row="3"
                    Margin="0,0,0,10"
                    Background="White"
                    BorderBrush="#DEE2E6">

            <!-- Critical Issues Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="#E74C3C" Margin="0,0,5,0"/>
                        <TextBlock Text="Critical Issues"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding CriticalIssues}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="파일" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="라인" Binding="{Binding LineNumber}" Width="60"/>
                            <DataGridTextColumn Header="규칙" Binding="{Binding RuleId}" Width="80"/>
                            <DataGridTextColumn Header="메시지" Binding="{Binding Message}" Width="*"/>
                            <DataGridTextColumn Header="코드" Binding="{Binding CodeSnippet}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Warning Issues Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="#F39C12" Margin="0,0,5,0"/>
                        <TextBlock Text="Warning Issues"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding WarningIssues}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="파일" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="라인" Binding="{Binding LineNumber}" Width="60"/>
                            <DataGridTextColumn Header="규칙" Binding="{Binding RuleId}" Width="80"/>
                            <DataGridTextColumn Header="메시지" Binding="{Binding Message}" Width="*"/>
                            <DataGridTextColumn Header="코드" Binding="{Binding CodeSnippet}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Files Tab -->
            <TabItem Header="파일 목록">
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding FileStats}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="파일명" Binding="{Binding FileName}" Width="250"/>
                            <DataGridTextColumn Header="타입" Binding="{Binding FileType}" Width="80"/>
                            <DataGridTextColumn Header="POU 타입" Binding="{Binding PouType}" Width="100"/>
                            <DataGridTextColumn Header="라인수" Binding="{Binding LineCount}" Width="80"/>
                            <DataGridTextColumn Header="복잡도" Binding="{Binding Complexity}" Width="80"/>
                            <DataGridTextColumn Header="이슈수" Binding="{Binding IssueCount}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Rules Summary Tab -->
            <TabItem Header="규칙별 통계">
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding RuleStatistics}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="규칙 ID" Binding="{Binding RuleId}" Width="100"/>
                            <DataGridTextColumn Header="심각도" Binding="{Binding Severity}" Width="100"/>
                            <DataGridTextColumn Header="카테고리" Binding="{Binding Category}" Width="120"/>
                            <DataGridTextColumn Header="건수" Binding="{Binding Count}" Width="80"/>
                            <DataGridTextColumn Header="설명" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Complexity Tab -->
            <TabItem Header="복잡도 분석">
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding HighComplexityFiles}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="파일명" Binding="{Binding FileName}" Width="300"/>
                            <DataGridTextColumn Header="POU 타입" Binding="{Binding PouType}" Width="100"/>
                            <DataGridTextColumn Header="라인수" Binding="{Binding LineCount}" Width="100"/>
                            <DataGridTextColumn Header="복잡도" Binding="{Binding Complexity}" Width="100"/>
                            <DataGridTextColumn Header="이슈수" Binding="{Binding IssueCount}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="4"
                Background="#34495E"
                CornerRadius="5"
                Padding="12,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                          Foreground="White"
                          FontSize="12"
                          VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisConverter}}">
                    <ProgressBar IsIndeterminate="True"
                               Width="120"
                               Height="16"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="분석 중..."
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           Visibility="{Binding HasResults, Converter={StaticResource BoolToVisConverter}}">
                    <Button Content="HTML 리포트 내보내기"
                           Command="{Binding ExportHtmlCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,10,0"/>
                    <Button Content="JSON 내보내기"
                           Command="{Binding ExportJsonCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
