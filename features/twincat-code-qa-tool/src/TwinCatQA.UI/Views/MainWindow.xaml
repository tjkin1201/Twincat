<Window x:Class="TwinCatQA.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TwinCAT Code QA Tool"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="ModeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#667eea"/>
                    <Setter Property="Background" Value="#1a2744"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource ModeCardStyle}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="DescriptionTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#aaa"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Padding="30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="TwinCAT Code QA Tool"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="TwinCAT PLC 코드 품질 분석 도구"
                          FontSize="14"
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Mode Selection -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Single Project Analysis -->
            <Button Grid.Column="0"
                    Style="{StaticResource ModeButtonStyle}"
                    Click="SingleProjectAnalysis_Click">
                <StackPanel>
                    <TextBlock Text="&#x1F4C1;" Style="{StaticResource IconTextStyle}"/>
                    <TextBlock Text="단일 프로젝트 분석" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Style="{StaticResource DescriptionTextStyle}">
                        하나의 TwinCAT 프로젝트를 선택하여
                        전체 코드 품질을 분석합니다.

                        - 초기화되지 않은 변수 검출
                        - 위험한 타입 변환 감지
                        - 0으로 나누기 가능성 확인
                        - 복잡도 분석
                        - 명명 규칙 검사
                    </TextBlock>
                </StackPanel>
            </Button>

            <!-- Compare Projects -->
            <Button Grid.Column="1"
                    Style="{StaticResource ModeButtonStyle}"
                    Click="CompareProjects_Click">
                <StackPanel>
                    <TextBlock Text="&#x1F504;" Style="{StaticResource IconTextStyle}"/>
                    <TextBlock Text="Source &amp; Target 비교" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Style="{StaticResource DescriptionTextStyle}">
                        두 TwinCAT 프로젝트를 비교하여
                        변경 사항과 품질 이슈를 분석합니다.

                        - 파일 변경 내역 비교
                        - 변수 타입/값 변경 추적
                        - I/O 매핑 변경 감지
                        - 로직 변경 분석
                        - 데이터 타입 변경 확인
                    </TextBlock>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="#0f3460"
                Padding="15">
            <Grid>
                <TextBlock Text="TwinCAT Code QA Tool v1.0"
                          Foreground="#aaa"
                          FontSize="12"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right">
                    <TextBlock Text="QA 규칙: 20개"
                              Foreground="#aaa"
                              FontSize="12"
                              Margin="0,0,20,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="지원 파일: TcPOU, TcGVL, TcDUT"
                              Foreground="#aaa"
                              FontSize="12"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
