<Window x:Class="TwinCatQA.UI.Views.FolderComparisonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TwinCatQA.UI.Converters"
        xmlns:controls="clr-namespace:TwinCatQA.UI.Controls"
        mc:Ignorable="d"
        Title="TwinCAT Folder Comparison Tool"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisConverter"/>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                CornerRadius="5" 
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="TwinCAT Folder Comparison Tool" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Compare two TwinCAT project folders and analyze changes" 
                          FontSize="12" 
                          Foreground="#ECF0F1"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Folder Selection -->
        <Border Grid.Row="1" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Source Folder:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Width="100"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                        Text="{Binding SourceFolderPath, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="True"
                        Padding="8"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Background="#F8F9FA"/>
                <Button Grid.Row="0" Grid.Column="2"
                       Content="Browse..."
                       Command="{Binding BrowseSourceFolderCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                          Text="Target Folder:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Margin="0,10,0,0"
                          Width="100"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                        Text="{Binding TargetFolderPath, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="True"
                        Padding="8"
                        Margin="5,10,5,0"
                        VerticalAlignment="Center"
                        Background="#F8F9FA"/>
                <Button Grid.Row="1" Grid.Column="2"
                       Content="Browse..."
                       Command="{Binding BrowseTargetFolderCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <!-- Compare Options & Action -->
        <Border Grid.Row="2" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Compare Options:" 
                              FontWeight="SemiBold" 
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <CheckBox Content="Variables" 
                             IsChecked="{Binding IncludeVariables}"
                             VerticalAlignment="Center"
                             Margin="5"/>
                    <CheckBox Content="I/O Mapping" 
                             IsChecked="{Binding IncludeIOMapping}"
                             VerticalAlignment="Center"
                             Margin="5"/>
                    <CheckBox Content="Logic" 
                             IsChecked="{Binding IncludeLogic}"
                             VerticalAlignment="Center"
                             Margin="5"/>
                    <CheckBox Content="Data Types" 
                             IsChecked="{Binding IncludeDataTypes}"
                             VerticalAlignment="Center"
                             Margin="5"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Content="Start Compare"
                       Command="{Binding CompareCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Width="120"
                       Height="40"/>
            </Grid>
        </Border>

        <!-- Results -->
        <TabControl Grid.Row="3" 
                    Margin="0,0,0,10">
            
            <!-- Summary Tab -->
            <TabItem Header="Summary">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#E8F4F8" 
                            BorderBrush="#3498DB"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Total Changes" 
                                          FontSize="12" 
                                          Foreground="#7F8C8D"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalChanges}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#2C3E50"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Added" 
                                          FontSize="12" 
                                          Foreground="#7F8C8D"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding AddedCount}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#27AE60"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Removed" 
                                          FontSize="12" 
                                          Foreground="#7F8C8D"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding RemovedCount}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#E74C3C"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="Modified" 
                                          FontSize="12" 
                                          Foreground="#7F8C8D"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ModifiedCount}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#F39C12"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Border Background="White"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1"
                                CornerRadius="3">
                            <TextBlock Text="{Binding SummaryMessage}"
                                      TextWrapping="Wrap"
                                      FontSize="13"
                                      Padding="10"/>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Variables Tab - ChangeTypeë³„ ê·¸ë£¹í™” -->
            <TabItem Header="Variable Changes">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <!-- ì¶”ê°€ëœ ë³€ìˆ˜ ì„¹ì…˜ -->
                        <Expander Header="âž• ì¶”ê°€ëœ ë³€ìˆ˜ (Added)" IsExpanded="True" Margin="0,0,0,10">
                            <Expander.Style>
                                <Style TargetType="Expander">
                                    <Setter Property="Background" Value="#E8F8F5"/>
                                    <Setter Property="BorderBrush" Value="#27AE60"/>
                                    <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </Expander.Style>
                            <DataGrid ItemsSource="{Binding AddedVariables}"
                                      MaxHeight="200"
                                      Margin="0,5,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding VariableName}" Width="*"/>
                                    <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="100"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding NewDataType}" Width="150"/>
                                    <DataGridTextColumn Header="Initial Value" Binding="{Binding NewInitialValue}" Width="150"/>
                                    <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>

                        <!-- ì‚­ì œëœ ë³€ìˆ˜ ì„¹ì…˜ -->
                        <Expander Header="âž– ì‚­ì œëœ ë³€ìˆ˜ (Removed)" IsExpanded="True" Margin="0,0,0,10">
                            <Expander.Style>
                                <Style TargetType="Expander">
                                    <Setter Property="Background" Value="#FDEDEC"/>
                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                    <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </Expander.Style>
                            <DataGrid ItemsSource="{Binding RemovedVariables}"
                                      MaxHeight="200"
                                      Margin="0,5,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding VariableName}" Width="*"/>
                                    <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="100"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding OldDataType}" Width="150"/>
                                    <DataGridTextColumn Header="Initial Value" Binding="{Binding OldInitialValue}" Width="150"/>
                                    <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>

                        <!-- ìˆ˜ì •ëœ ë³€ìˆ˜ ì„¹ì…˜ -->
                        <Expander Header="âœï¸ ìˆ˜ì •ëœ ë³€ìˆ˜ (Modified)" IsExpanded="True" Margin="0,0,0,10">
                            <Expander.Style>
                                <Style TargetType="Expander">
                                    <Setter Property="Background" Value="#FEF5E7"/>
                                    <Setter Property="BorderBrush" Value="#F39C12"/>
                                    <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </Expander.Style>
                            <DataGrid ItemsSource="{Binding ModifiedVariables}"
                                      MaxHeight="250"
                                      Margin="0,5,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding VariableName}" Width="*"/>
                                    <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="80"/>
                                    <DataGridTextColumn Header="Old Type" Binding="{Binding OldDataType}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="â†’" Width="30"/>
                                    <DataGridTextColumn Header="New Type" Binding="{Binding NewDataType}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Old Value" Binding="{Binding OldInitialValue}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="â†’" Width="30"/>
                                    <DataGridTextColumn Header="New Value" Binding="{Binding NewInitialValue}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- I/O Mapping Tab -->
            <TabItem Header="I/O Mapping Changes">
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding IOMappingChanges}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Change Type" Binding="{Binding ChangeType}" Width="100"/>
                            <DataGridTextColumn Header="Variable Name" Binding="{Binding VariableName}" Width="*"/>
                            <DataGridTextColumn Header="Old Address" Binding="{Binding OldAddress}" Width="150"/>
                            <DataGridTextColumn Header="New Address" Binding="{Binding NewAddress}" Width="150"/>
                            <DataGridTextColumn Header="Data Type" Binding="{Binding DataType}" Width="120"/>
                            <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Logic Tab - ê²€í†  ì˜ê²¬ í¬í•¨ -->
            <TabItem Header="Logic Changes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="120" MaxHeight="200"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ë³€ê²½ ëª©ë¡ (ìƒë‹¨) -->
                    <DataGrid Grid.Row="0"
                              ItemsSource="{Binding LogicChanges}"
                              SelectedItem="{Binding SelectedLogicChange}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding ChangeType}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ChangeType}" Value="Added">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ChangeType}" Value="Removed">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ChangeType}" Value="Modified">
                                                <Setter Property="Foreground" Value="#F39C12"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Element" Binding="{Binding ElementName}" Width="150"/>
                            <DataGridTextColumn Header="Lines" Binding="{Binding ChangedLineCount}" Width="60"/>
                            <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="200"/>
                            <DataGridTextColumn Header="Reviews" Binding="{Binding ReviewCount}" Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#3498DB"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Critical" Binding="{Binding CriticalCount}" Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CriticalCount}" Value="0">
                                                <Setter Property="Foreground" Value="#95A5A6"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GridSplitter Grid.Row="1"
                                  Height="5"
                                  HorizontalAlignment="Stretch"
                                  Background="#DEE2E6"/>

                    <!-- í•˜ë‹¨: Diff + ê²€í†  ì˜ê²¬ (ì¢Œìš° ë¶„í• ) -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="350" MinWidth="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- ì½”ë“œ Diff (ì¢Œì¸¡) -->
                        <Border Grid.Column="0"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1"
                                CornerRadius="3"
                                Background="#F8F9FA">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0"
                                        Background="#E9ECEF"
                                        Padding="10,8">
                                    <TextBlock Text="ðŸ“ ì½”ë“œ ë³€ê²½ (Diff)"
                                              FontWeight="SemiBold"
                                              Foreground="#2C3E50"/>
                                </Border>

                                <controls:DiffViewer Grid.Row="1"
                                                     OldText="{Binding SelectedLogicChange.OldCode, Mode=OneWay}"
                                                     NewText="{Binding SelectedLogicChange.NewCode, Mode=OneWay}"/>
                            </Grid>
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      Width="5"
                                      VerticalAlignment="Stretch"
                                      Background="#DEE2E6"/>

                        <!-- ê²€í†  ì˜ê²¬ (ìš°ì¸¡) -->
                        <Border Grid.Column="2"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1"
                                CornerRadius="3"
                                Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0"
                                        Background="#2C3E50"
                                        Padding="10,8">
                                    <TextBlock Text="ðŸ“‹ ê²€í†  ì˜ê²¬ (Review Comments)"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding SelectedLogicChange.ReviewComments}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="5" Padding="10" CornerRadius="5">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#F8F9FA"/>
                                                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                                    <Setter Property="Background" Value="#FDEDEC"/>
                                                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                                                    <Setter Property="Background" Value="#FEF5E7"/>
                                                                    <Setter Property="BorderBrush" Value="#F39C12"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Info">
                                                                    <Setter Property="Background" Value="#EBF5FB"/>
                                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <StackPanel>
                                                        <!-- ì œëª© + ì‹¬ê°ë„ -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding Title}"
                                                                       FontWeight="Bold"
                                                                       FontSize="12"
                                                                       TextWrapping="Wrap"/>
                                                            <Border Grid.Column="1"
                                                                    CornerRadius="3"
                                                                    Padding="5,2"
                                                                    Margin="5,0,0,0">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                                                <Setter Property="Background" Value="#E74C3C"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                                                                <Setter Property="Background" Value="#F39C12"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Severity}" Value="Info">
                                                                                <Setter Property="Background" Value="#3498DB"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="{Binding Severity}"
                                                                           Foreground="White"
                                                                           FontSize="10"
                                                                           FontWeight="Bold"/>
                                                            </Border>
                                                        </Grid>

                                                        <!-- ì¹´í…Œê³ ë¦¬ -->
                                                        <TextBlock Text="{Binding Category, StringFormat='[{0}]'}"
                                                                   Foreground="#7F8C8D"
                                                                   FontSize="10"
                                                                   Margin="0,3,0,5"/>

                                                        <!-- ì„¤ëª… -->
                                                        <TextBlock Text="{Binding Description}"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="11"
                                                                   Margin="0,0,0,5"/>

                                                        <!-- ì˜í–¥ -->
                                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                            <TextBlock Text="ì˜í–¥: "
                                                                       FontWeight="SemiBold"
                                                                       FontSize="11"
                                                                       Foreground="#E74C3C"/>
                                                            <TextBlock Text="{Binding Impact}"
                                                                       TextWrapping="Wrap"
                                                                       FontSize="11"/>
                                                        </StackPanel>

                                                        <!-- ê¶Œìž¥ ì¡°ì¹˜ -->
                                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                            <TextBlock Text="ì¡°ì¹˜: "
                                                                       FontWeight="SemiBold"
                                                                       FontSize="11"
                                                                       Foreground="#27AE60"/>
